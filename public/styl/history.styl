#history-slide
  height: 650px

  .quote
    margin: 0 auto
    padding-top: 20px
    padding-bottom: 100px
    width: 600px
    font-size: 26px

    img
      width: 70px

    .author
      text-align: right

  .facts
    float: left
    padding-left: 100px

    ul
      padding-bottom: 40px
      font-size: 24px

      li
        padding-bottom: 10px

    table
      border-spacing: 0
      border-radius: 15px
      border: 1px solid
      font-size: 20px
      text-align: center

      tr
        &:first-child
          td
            border-top: none

      td
        padding: 25px 50px
        border-top: 1px solid

        &:first-child
          border-right: 1px solid
  .netscape
    padding-left: 100px
    padding-top: 40px
