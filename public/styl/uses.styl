#uses-slide
  padding: 240px 50px
  height: 700px
  text-align: center

  .section
    display: inline-block
    vertical-align: top

    .title
      padding-bottom: 30px

    &.second
      padding-left: 300px

  ul
    text-align: left

    li
      padding-bottom: 10px
      font-size: 35px

  iframe
    position: relative
    top: -50px
    left: -200px
    transform: translateZ(1px)
    -webkit-transform: translateZ(1px)
    -moz-transform: translateZ(1px)
